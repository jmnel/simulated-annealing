   ],
   "source": [
    "from sympy import *\n",
    "\n",
    "a, k, m = symbols('a k m')\n",
    "\n",
    "x = IndexedBase('x')\n",
    "i = Idx('i')\n",
    "\n",
    "u = Piecewise(\n",
    "(k*(x[i]-a)**m, Gt(x[a],a)),\n",
    "(0, And(Ge(x[i],-a), Le(x[i],a))),\n",
    "    (k*(-x[i]-a)**m, Lt(x[i],-a))\n",
    ")\n",
    "\n",
    "u\n",
    "\n",
    "Sum(u, (i,1,3)).doit()"
   ]
